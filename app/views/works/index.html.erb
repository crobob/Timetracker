<h1>Works: index</h1>

<p>Here are all of the Works:</p>

<table>
	<tbody>
		<tr>
			<th>User</th>
			<th>Project</th>
			<th>Datetime Performed</th>
			<th>Hours</th>
		</tr>
        <% @works.each do |work| %>
			<tr>
				<td><%= work.user %></td>
				<td><%= link_to work.project.name, work.project %></td>
				<td><%= link_to work.datetimeperformed.strftime('%m/%d/%Y %H:%M'), work %></td>
				<td><%= work.hours %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<% content_for :aside do %>
    <% render 'sidebar' %>
<% end %>
